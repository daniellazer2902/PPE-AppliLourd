<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GsbLourd.Views.AcceuilPage"
             Title="Acceuil"
             BackgroundImageSource="https://images-ext-1.discordapp.net/external/TiQrgliBuLcKAaBAcEzv84Qe2SG8jnixVTVwclu5-Co/https/image.freepik.com/vecteurs-libre/fond-ecran-bleu-technologie-futuriste_23-2148498428.jpg">


    <StackLayout HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand">

        <StackLayout>
            <StackLayout>
                <Label TextColor="White"  Text="Laboratoire Galaxy Swiss Bourdin"/>
            </StackLayout>
        </StackLayout>

        <StackLayout BackgroundColor="White" Padding="20" >
            <StackLayout>
                <Label Text="Gestion des comptes rendus" FontSize="Title"/>

                <Button Text="Compte rendus"
                        Command="{Binding RapportVisiteCommand}"/>
                
                <Button Text="Visiteurs"
                        Command="{Binding VisiteursCommand}"/>
                
                <Button Text="Praticiens"
                        Command="{Binding PraticiensCommand}"/>
                
                <Button Text="Medicaments"
                        Command="{Binding MedicamentsCommand}"/>
            </StackLayout>
        </StackLayout>

    </StackLayout>

</ContentPage>